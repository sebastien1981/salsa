<h1>Schools#new</h1>


<div class="">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-6">
      <%= simple_form_for [@school, @schoolclass] do |f| %>
        <div class="row">
        <div class="col-8">Choisissez votre école
            <%= select_tag :school_name,options_for_select(School.where(id: @school.id, school_id: @school.school_id).map{|c|[c.name,c.name]}), {:prompt => "--Choissisez votre école--"} %>
          </div>
          <div class="col-8">Choisisez votre type de dance:
            <%= f.collection_select :type_of_dance, Dance.all, :fullname, :fullname,{:prompt => "--Choissisez votre type de dance--"} %>
          </div>
          <div class="col-8">Choisisez votre niveau:
            <%= f.select :level,  options_for_select(%w[ Débutant Inter1 Inter2 Inter/Conf Confirmé]),{:prompt => "--Choissisez votre niveau--"} %>
          </div>
          <div class="col-8">
            <%= f.input :beginning_of_time %>
          </div>
          <div class="col-8">
            <%= f.input :end_of_time %>
          </div>
          <div class="col-8">Choisisez le jour de votre cours:
            <%= f.select :day_of_week , options_for_select(%w[Dimanche Lundi Mardi Mercredi Jeudi Vendredi Samedi]),{:prompt => "--Choissisez le jour de votre cours--"} %>
          </div>
          <div  class="col-8">Choisisez votre Professeur de dance:
           <%= select_tag :teacher_name,options_for_select(Teacher.joins("INNER JOIN school_teachers ON school_teachers.teacher_id = teachers.id INNER JOIN schools ON schools.id = school_teachers.school_id where schools.id = #{@school.idcreatepl} or schools.school_id = #{@school.idcreatepl} ").map{|p|["#{p.first_name} #{p.last_name}"]}), {:prompt => "--Choissisez votre professeur--"} %>
          </div>

            <%= f.submit  class: "btn btn-super"%>
      <% end %>


    </div>
  </div>
</div>
