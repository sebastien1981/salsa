<h1>Mon dashboard</h1>
<!-- app/views/restaurants/index.html.erb -->
<%= link_to "Acceder au listing des ecoles", root_path %>
<table>
  <tr>
   <th>&nbsp;</th>
    <% if @room.include?(1)  %>
      <% @schoolday_1.each do |schoolday| %>
        <th><%= schoolday %></th>
      <% end %>
    <% end %>
  </tr>
  <% @begintime_1.each do  | begintime | %>
    <tr>
    <td><%= begintime %></td>
    <% @schoolclasses.each do |schoolclasses|  %>
          <% if schoolclasses.room_number == 1 && schoolclasses.beginning_of_time.strftime("%H:%M").include?("10:00")  %>
            <td><%= schoolclasses.teacher_name %><p><%= schoolclasses.level  %><p> <%= schoolclasses.type_of_dance  %> <%= schoolclasses.room_number  %></td>
          <% end  %>
    <% end  %>
    </tr>
  <% end %>
</table>
